<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>Kari.GeneratorCore</RootNamespace>
    <AssemblyName>Kari.GeneratorCore</AssemblyName>

    <!-- <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\opensource.snk</AssemblyOriginatorKeyFile> -->
    <LangVersion>9</LangVersion>
    <TransformOnBuild>true</TransformOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="3.10.0" />
    <PackageReference Include="Microsoft.Build" Version="16.5.0" />
    <PackageReference Include="Mono.TextTemplating" Version="2.2.1" />
    <PackageReference Include="System.CodeDom" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kari.Shared\Kari.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.TextTemplating" Version="2.2.1" />
    <TextTemplate_CodeAnalysis Include="CodeAnalysis\*.tt" />
    <TextTemplate_Generator Include="Generator\*.tt" />
    <Generated Include="**\*.Generated.cs" />
  </ItemGroup>

  <Target Name="TextTemplateTransform" BeforeTargets="BeforeBuild">
    <Exec WorkingDirectory="$(ProjectDir)\Generator" Command="dotnet t4 %(TextTemplate_Generator.Filename).tt -c Kari.GeneratorCore.Generator.%(TextTemplate_Generator.Filename) -o %(TextTemplate_Generator.Filename).Generated.cs" />
    <Exec WorkingDirectory="$(ProjectDir)\CodeAnalysis" Command="dotnet t4 %(TextTemplate_CodeAnalysis.Filename).tt -o %(TextTemplate_CodeAnalysis.Filename).Generated.cs" />
  </Target>

  <Target Name="TextTemplateClean" AfterTargets="Clean">
    <Delete Files="@(Generated)" />
  </Target>

</Project>
